    <% @notes.each do |note| %>
        <!-- Trigger the modal with a button -->
    <!-- <span class="list-group"> -->

        <li class="list-group-item"><button type="button" class="btn" data-toggle="modal" data-target="#myModal"><%= note.title %></button></li>

