<table class="table table-hover">
  <thead>
    <tr>
      <th>Eid</th>
      <th>Uid</th>
      <th>Des</th>
      <th>Start date</th>
      <th>Complete date</th>
      <th>Seq number</th>
      <th>V</th>
      <th>Title</th>
      <th>Score</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<!-- .limit(10) -->
  <tbody>
    <% @exams.each do |exam| %>
      <tr>
        <td><%= exam.eid %></td>
        <td><%= exam.uid %></td>
        <td><%= exam.des %></td>
        <td><%= exam.start_date.strftime('%m/%d/%y') %></td>
        <td><%= exam.complete_date.strftime('%m/%d/%y') %></td>
        <td><%= exam.seq_number %></td>
        <td><%= exam.seq_v %></td>
        <td><%= truncate(exam.seq_t, :length => 25) %></td>
        <td><%= number_to_percentage((100*exam.score), precision: 0) %></td>
        <td><%= exam.rating %></td>
        <td><%= link_to 'Show', exam %></td>
        <td><%= link_to 'Edit', edit_exam_path(exam) %></td>
        <td><%= link_to 'Destroy', exam, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
